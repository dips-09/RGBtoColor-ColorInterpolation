@model HW4MVC.Models.ColorInterpolation

@{
    ViewData["Title"] = "ColorInterpolator";
}

<h1>Interpolator from one color to another</h1>

<hr />
<div class="row">
    <div class="col-lg-6 col-md-12">
        <h4>Please enter colors in HTML hexadecimal format: #AABBCC</h4>
        <form asp-action="ColorInterpolator">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstColor" class="control-label"></label>
                <input asp-for="FirstColor" class="form-control" />
                <span asp-validation-for="FirstColor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SecondColor" class="control-label"></label>
                <input asp-for="SecondColor" class="form-control" />
                <span asp-validation-for="SecondColor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfColors" class="control-label"></label>
                <input asp-for="NumberOfColors" class="form-control" />
                <span asp-validation-for="NumberOfColors" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Generate Colors" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-lg-6 col-md-12">
        @if (Model != null)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            HTML
                        </th>
                        <th>
                            Color
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ColorList)
                    {
                        <tr>
                            <td>
                                @item
                            </td>
                            <td style="background-color : @item">
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

<div>
    <a asp-action="Index">Back to Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
